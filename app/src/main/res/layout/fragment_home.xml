<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context="com.diary.thoughthaven.Fragment.Home">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Dashboard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cvNotePad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#d3d3d3"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:background="@drawable/background_color"
                                android:padding="8dp"
                                android:scaleType="centerInside"
                                app:srcCompat="@drawable/notepad_home"
                                tools:ignore="ContentDescription" />

                            <!-- Text size, text color, etc. is set from the class -->
                            <TextView
                                android:id="@+id/tvRegisterCompalint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/colorPrimary"
                                android:elevation="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:minHeight="40dp"
                                android:text="NotePad"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="0.5">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cvTodo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:clickable="true"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#d3d3d3"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.2"
                                android:background="@drawable/background_color"
                                android:padding="8dp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@drawable/todo_home"
                                tools:ignore="ContentDescription"
                              />

                            <!-- Text size, text color, etc. is set from the class -->
                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/colorPrimary"
                                android:elevation="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:minHeight="40dp"
                                android:text="Todo"
                                android:textColor="#fff"
                                android:textSize="16sp" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:padding="12dp">


            <Button
                android:id="@+id/btnShareApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/button"
                android:drawableRight="@drawable/ic_share_black_24dp"
                android:text="Share"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btnRateApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnShareApp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button"
                android:drawableRight="@drawable/ic_star_border_black_24dp"
                android:text="Rate App"
                android:textColor="@color/white" />


        </LinearLayout>


    </LinearLayout>

</FrameLayout>
